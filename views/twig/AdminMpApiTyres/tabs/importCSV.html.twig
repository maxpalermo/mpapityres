<div class="card mb-2">
    <div class="card-header">
        <h3>Importa da file CSV</h3>
    </div>
    <div class="card-body">
        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="csvFile">File CSV</label>
                <input type="file" class="form-control" id="csvFile" name="csvFile">
            </div>
            <button type="submit" class="btn btn-primary">Importa</button>
        </form>
        <div id="csvPreview"></div>
    </div>
</div>
<div class="card mb-2">
    <div class="card-header">
        <h3>Scarica file CSV</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <label for="directDownload">Scarica direttamente dal sito Tyre24</label>
            </div>
            <div class="col-12">
                <button type="button" class="btn btn-primary btn-download-catalog">
                    <span class="material-icons">cloud_download</span>
                    <span>Scarica</span>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="card mb-2">
    <div class="card-header">
        <h3>Filtra i risultati</h3>
    </div>
    <div class="card-body">
        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                {% set chunkFiles = chunkFiles is defined ? chunkFiles : [] %}
                {% if chunkFiles|length > 0 %}
                <ul class="list-group mt-3">
                    {% for file in chunkFiles %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ file }}
                        <div class="button-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary btn-read-json" data-file="{{ file }}">Visualizza query</button>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
                {% else %}
                <p class="mt-3 text-muted">Nessun chunk CSV presente.</p>
                {% endif %}
            </div>
            <button type="button" class="btn btn-primary" id="btn-import-chunks" title="Filtra i dati del file CSV">
                <span class="material-icons mr-2">filter_alt</span>
                <span>Filtra i dati del CSV</span>
            </button>
            <button type="button" class="btn btn-warning" id="btn-update-catalog" title="Aggiorna il catalogo con i dati del CSV">
                <span class="material-icons mr-2">update</span>
                <span>Aggiorna catalogo</span>
            </button>
            <button type="button" class="btn btn-danger" id="btn-update-tyre-tables" title="Aggiorna le tabelle dei pneumatici">
                <span class="material-icons mr-2">update</span>
                <span>Aggiorna tabelle</span>
            </button>
            <button type="button" class="btn btn-warning" id="btn-set-suppliers" title="Imposta i fornitori">
                <span class="material-icons mr-2">store</span>
                <span>Imposta i fornitori</span>
            </button>
            <button type="button" class="btn btn-warning" id="btn-download-images" title="Scarica le immagini dei prodotti">
                <span class="material-icons mr-2">cloud_download</span>
                <span>Scarica immagini</span>
            </button>
            <button type="button" class="btn btn-warning" id="btn-download-api" title="Scarica via API">
                <span class="material-icons mr-2">cloud_download</span>
                <span>API download</span>
            </button>
            <button type="button" class="btn btn-warning" id="btn-download-file" title="Scarica via API">
                <span class="material-icons mr-2">file_download</span>
                <span>File download</span>
            </button>
        </form>
    </div>
</div>